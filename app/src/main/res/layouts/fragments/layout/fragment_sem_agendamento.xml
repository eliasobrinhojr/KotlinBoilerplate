<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white"
                                             tools:context=".ui.fragments.SemAgendamentoFragment">


    <TextView
            android:text="Ops!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:fontFamily="@string/font_family_medium"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_marginEnd="8dp" android:layout_marginTop="100dp" android:textColor="#4e4e4e"
            android:textSize="20sp"/>
    <TextView
            android:text="Ainda não há supervisões agendadas \n pra você."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_medium"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="10dp" android:textSize="16sp"
            android:textColor="#4e4e4e" android:textAlignment="center"
    />
    <TextView
            android:text="Entre em contato com o administrador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:id="@+id/textView5" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginStart="8dp" android:textColor="#4e4e4e" android:textSize="16sp"/>
    <ImageView
            android:src="@drawable/icon_sem_agendamentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
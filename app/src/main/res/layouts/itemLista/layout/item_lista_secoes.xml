<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="49dp"
                                             android:layout_height="68dp">


    <ImageButton
            android:id="@+id/item_lista_secoes_icone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/borda_icone_linha"
            android:src="@drawable/icon_secao_gerente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_lista_secoes_descricao"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="3dp"
            android:text="Gerente"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_lista_secoes_icone"
            tools:text="Gerente"/>


</android.support.constraint.ConstraintLayout>